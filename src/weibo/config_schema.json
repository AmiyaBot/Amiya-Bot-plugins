{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [],
    "properties": {
        "setting": {
            "title": "监听设置",
            "type": "object",
            "required": [
                "checkRate"
            ],
            "properties": {
                "checkRate": {
                    "title": "监听频率",
                    "description": "每隔一定时间刷新一下微博列表的频率，单位秒",
                    "type": "integer",
                    "default": 30
                },
                "sendGIF": {
                    "title": "是否发送GIF图",
                    "type": "boolean",
                    "default": false
                },
                "imagesCache": {
                    "title": "图片缓存目录",
                    "description": "微博图片缓存的目录，可以为绝对路径",
                    "type": "string",
                    "default": "log/weibo"
                },
                "remote": {
                    "title": "接口转发",
                    "description": "使用CDN接口获取微博推送(可能会有延迟)。重要：本选项仅在本地拉取微博报错时开启！",
                    "type": "boolean",
                    "default": false
                }
            }
        },
        "websocket": {
            "title": "WebSocket",
            "type": "object",
            "properties": {
                "url": {
                    "title": "url",
                    "type": "string",
                    "default": "wss://cdn.amiyabot.com/api/v1/weibo/ws"
                },
                "token": {
                    "title": "访问令牌",
                    "description": "您的WebSocket访问令牌",
                    "type": "string",
                    "default": ""
                },
                "reconnectAttempts": {
                    "title": "重连次数",
                    "type": "integer",
                    "default": 5
                },
                "reconnectDelay": {
                    "title": "重连延迟时间",
                    "type": "integer",
                    "default": 5
                }
            }
        },
        "sendAsync": {
            "title": "是否同时推送",
            "description": "同时向所有群推送，否则排队推送。",
            "type": "boolean",
            "default": false
        },
        "sendInterval": {
            "title": "发送间隔",
            "description": "如果不是同时发送，每隔一定时间向下一个群推送",
            "type": "number",
            "default": 0.2
        },
        "listen": {
            "title": "监听列表",
            "description": "监听的微博ID的列表",
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "uid": {
                        "title": "微博 ID",
                        "description": "一般在微博首页的 url 可以得到：https://weibo.com/u/xxxxxxxxx",
                        "type": "string"
                    },
                    "name": {
                        "title": "备注",
                        "type": "string"
                    }
                }
            }
        },
        "block": {
            "title": "规则屏蔽",
            "description": "正文触发列表中任一规则匹配（包括正则表达式和搜索）的微博将不会推送（即使仍然会被记录）",
            "type": "array",
            "default": [
            ]
        }
    }
}
